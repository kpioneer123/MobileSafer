<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:siv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#365ee2"
        android:gravity="center"
        android:text="设置中心"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f1f1f1"
        android:textSize="20sp" />

    <com.cloudhome.mobilesafer.view.SettingItemView
        android:id="@+id/siv_update"
        siv:title = "设置自动更新"
        siv:update_off = "自动升级已经关闭"
        siv:update_on  = "自动升级已经开启"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <com.cloudhome.mobilesafer.view.SettingItemView
        android:id="@+id/siv_showaddress"
        siv:title = "设置归属地显示"
        siv:update_off = "归属地显示已经关闭"
        siv:update_on  = "归属地显示已经开启"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <com.cloudhome.mobilesafer.view.SettingClickView
        android:id="@+id/scv_changebg"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.cloudhome.mobilesafer.view.SettingClickView
        android:id="@+id/scv_changeposition"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>