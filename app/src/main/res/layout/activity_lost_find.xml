<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#365ee2"
        android:gravity="center"
        android:text="手机防盗"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f1f1f1"
        android:textSize="20sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="安全密码"
            />

        <TextView
            android:id="@+id/tv_safenumber"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="xxx"
            />


        <View
            android:background="#666666"
           android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="防盗保护是否开启"
            />

        <ImageView

            android:id="@+id/iv_status"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/unlock"
            />


        <View
            android:background="#666666"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:onClick="reEnterSetting"
        android:clickable="true"
        android:background="@drawable/enter_setting_button_bg"
        android:layout_height="40dp">

        <TextView

            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="重新进入设置向导"
            />



        <View
            android:background="#666666"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:textSize="19sp"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="功能简介"
            android:background="#55000000"
            />




    </RelativeLayout>




    <TextView
        android:text="GPS追踪：#location#"

        style="@style/text_content_style"
        android:drawableLeft="@mipmap/step_star"
        />

    <TextView
        android:text="播放器报警音乐：#alarm#"

        style="@style/text_content_style"
        android:drawableLeft="@mipmap/step_star"

        />


    <TextView
        android:text="远程删除数据：#wipedatd#"

        style="@style/text_content_style"
        android:drawableLeft="@mipmap/step_star"
        />


    <TextView
        android:text="远程锁屏：#lockscreen#"

        style="@style/text_content_style"
        android:drawableLeft="@mipmap/step_star"
        />

</LinearLayout>